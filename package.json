    "@types/supertest": "2.0.9",
    "@types/swagger-ui-express": "4.1.2",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "faker": "^5.1.0",
    "jest": "26.1.0",
    "jest-express": "1.12.0",
    "madge": "^4.0.2",
    "mockingoose": "2.13.2",
    "prettier": "^2.2.0",
    "supertest": "4.0.2",
    "ts-jest": "26.1.1",
    "ts-node": "^9.0.0",
    "ttypescript": "^1.5.11",
    "typescript": "3.9.5"
  },
