    "firebase-admin": "^9.4.1",
    "joi": "17.2.1",
    "mongoose": "^5.12.7",
    "morgan": "^1.10.0",
    "nodemon": "2.0.4",
    "socket.io": "^2.4.1",
    "swagger-ui-express": "4.1.4",
    "winston": "3.3.2"
  },
  "devDependencies": {
    "@types/compression": "1.7.0",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "8.2.0",
